# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                      controllers.Application.index

# Users
GET         /users/all                                             controllers.UserController.all

#Exercises
GET         /exercises/sections                                    controllers.ExercisesController.sections
GET         /exercises/sections/:section/:category                 controllers.ExercisesController.category(section : String, category: String)
POST        /exercises/sections/:section/:category/evaluate        controllers.ExercisesController.evaluate(section : String, category: String)

#Followup
POST        /followup/create                                       controllers.FollowupController.create
GET         /followup/retrieve/:login                              controllers.FollowupController.retrieve(login: String)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                          controllers.Assets.at(path="/public", file)

# OAuth2 Stuff
GET         /_oauth-callback                                       utils.OAuth2.callback(code: Option[String], state: Option[String])
GET         /_oauth-success                                        utils.OAuth2.success
GET         /logout                                                utils.OAuth2.logout
